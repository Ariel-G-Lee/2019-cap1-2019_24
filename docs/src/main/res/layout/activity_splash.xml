<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5d5c5c"
    android:gravity="center">


    <ImageView
        android:id="@+id/bg"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/bg"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="200dp"
        app:layout_constraintLeft_toLeftOf="100dp"
        app:layout_constraintTop_toTopOf="0dp"
        app:layout_constraintRight_toLeftOf="100dp"
        app:layout_constraintBottom_toBottomOf="0dp"/>

    <ImageView
        android:id="@+id/logo_anim"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/logo_anim"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="264dp"
        app:layout_constraintLeft_toLeftOf="100dp"
        app:layout_constraintTop_toTopOf="0dp"
        app:layout_constraintRight_toLeftOf="100dp"
        app:layout_constraintBottom_toBottomOf="0dp" />

    <ImageView
        android:id="@+id/typo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/typo"
        tools:layout_editor_absoluteX="155dp"
        tools:layout_editor_absoluteY="454dp"
        app:layout_constraintLeft_toLeftOf="100dp"
        app:layout_constraintTop_toTopOf="100dp"
        app:layout_constraintRight_toLeftOf="100dp"
        app:layout_constraintBottom_toBottomOf="0dp" />




</android.support.constraint.ConstraintLayout>
